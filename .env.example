# EZARK税務・会計ブログ自動化システム - 環境変数設定

# ===========================================
# WordPress API設定（必須）
# ===========================================
# WordPressサイトのREST API URL
WORDPRESS_API_URL=https://ezark-tax-accounting.com/wp-json/wp/v2

# WordPress管理者ユーザー名
WORDPRESS_USERNAME=your_wordpress_username

# WordPressアプリケーションパスワード（推奨）
# または管理者パスワード（非推奨）
WORDPRESS_APP_PASSWORD=your_wordpress_app_password

# サイトのベースURL
SITE_URL=https://ezark-tax-accounting.com

# ===========================================
# OpenAI API設定（必須）
# ===========================================
# OpenAI APIキー（GPT-4アクセス可能なキー）
OPENAI_API_KEY=sk-your_openai_api_key_here

# 使用するGPTモデル（デフォルト: gpt-4）
OPENAI_MODEL=gpt-4

# API使用量制限（1日あたりのリクエスト数）
OPENAI_DAILY_LIMIT=100

# ===========================================
# 記事設定
# ===========================================
# デフォルト著者名
DEFAULT_AUTHOR=ゆーた

# デフォルトカテゴリ（カンマ区切り）
DEFAULT_CATEGORY=税務・会計,クラウド会計

# デフォルトタグ（カンマ区切り）
DEFAULT_TAGS=freee,マネーフォワード,確定申告

# 記事の投稿ステータス（publish/draft）
DEFAULT_POST_STATUS=draft

# ===========================================
# GitHub Actions設定（オプション）
# ===========================================
# GitHub Personal Access Token（プライベートリポジトリの場合）
GITHUB_TOKEN=ghp_your_github_token_here

# Slack通知用Webhook URL（オプション）
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord通知用Webhook URL（オプション）
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# ===========================================
# システム設定
# ===========================================
# ログレベル（debug/info/warn/error）
LOG_LEVEL=info

# タイムゾーン
TIMEZONE=Asia/Tokyo

# 処理タイムアウト時間（秒）
PROCESSING_TIMEOUT=300

# 記事生成時の最大文字数
MAX_ARTICLE_LENGTH=8000

# 記事生成時の最小文字数
MIN_ARTICLE_LENGTH=1500

# ===========================================
# API制限・リトライ設定
# ===========================================
# API呼び出し間隔（ミリ秒）
API_DELAY=2000

# リトライ回数
MAX_RETRIES=3

# リトライ間隔（ミリ秒）
RETRY_DELAY=5000

# ===========================================
# ファイル・ディレクトリ設定
# ===========================================
# 入力ディレクトリ
INPUT_DIR=./inputs/research_results

# 出力ディレクトリ
OUTPUT_DIR=./outputs

# ログディレクトリ
LOG_DIR=./logs

# 一時ファイルディレクトリ
TEMP_DIR=./temp

# ===========================================
# SEO・メタデータ設定
# ===========================================
# デフォルトメタディスクリプション長
META_DESCRIPTION_LENGTH=120

# タイトル最大長
TITLE_MAX_LENGTH=32

# フォーカスキーワード密度の目標範囲
KEYWORD_DENSITY_MIN=0.5
KEYWORD_DENSITY_MAX=3.0

# ===========================================
# WordPress固有設定
# ===========================================
# Yoast SEOプラグイン使用フラグ
USE_YOAST_SEO=true

# Swellテーマ固有機能使用フラグ
USE_SWELL_FEATURES=true

# 自動スキーママークアップ追加フラグ
AUTO_ADD_SCHEMA=true

# ===========================================
# 通知設定
# ===========================================
# 成功時の通知送信フラグ
NOTIFY_ON_SUCCESS=true

# エラー時の通知送信フラグ
NOTIFY_ON_ERROR=true

# 処理完了時の通知送信フラグ
NOTIFY_ON_COMPLETION=true

# メール通知設定（オプション）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
NOTIFICATION_EMAIL=admin@ezark-tax-accounting.com

# ===========================================
# デバッグ・テスト設定
# ===========================================
# デバッグモード
DEBUG=false

# テストモード（実際には投稿しない）
DRY_RUN=false

# 詳細ログ出力フラグ
VERBOSE_LOGGING=false

# パフォーマンス測定フラグ
MEASURE_PERFORMANCE=true

# ===========================================
# セキュリティ設定
# ===========================================
# API キー暗号化用のソルト（本番環境では変更必須）
ENCRYPTION_KEY=your-32-character-secret-key-here

# セッション有効期限（秒）
SESSION_TIMEOUT=3600

# CORS許可オリジン（複数の場合はカンマ区切り）
CORS_ORIGINS=https://ezark-tax-accounting.com

# ===========================================
# 高度な設定
# ===========================================
# 並列処理数
CONCURRENT_PROCESSES=2

# キュー処理間隔（秒）
QUEUE_INTERVAL=10

# バックアップ設定
AUTO_BACKUP=true
BACKUP_RETENTION_DAYS=30

# キャッシュ設定
ENABLE_CACHE=true
CACHE_TTL=3600

# ===========================================
# 使用方法
# ===========================================
# 1. このファイルを .env にコピー
# 2. 必要な値を設定（特に「必須」と記載された項目）
# 3. WordPressのアプリケーションパスワードを生成
# 4. OpenAI APIキーを取得
# 5. 設定完了後、システムを起動

# 注意事項:
# - 本番環境では .env ファイルを .gitignore に追加してください
# - パスワードやAPIキーは安全に管理してください
# - アプリケーションパスワードの使用を推奨します